{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest", "graphql"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["dom"]
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
